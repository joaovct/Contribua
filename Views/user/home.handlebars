<link rel="stylesheet" href="/styles/css/homeUser.css" />

<div class="centralize padding-top4">
    <div class="container">
        <h1 class="title">Bem-vindo de volta <span class="blue">{{dataHeader.nameVolunteer}}</span></h1>
        <div class="feed-header">
            <ul class="group-categories">
                <a class="item-category select-filter filter-disabled" href="#">
                    <li>Causas <img src="/assets/imgs/arrow-down.svg" /></li>
                </a>
                <a class="item-category select-filter filter-disabled" href="#">
                    <li>Habilidades <img src="/assets/imgs/arrow-down.svg" /></li>
                </a>
                <a class="item-category item-filter filter-active" href="#">
                    <li>Inscrições</li>
                </a>
                <a class="item-category item-filter  filter-disabled" href="#">
                    <li>Proximidade</li>
                </a>
                <a class="item-category item-filter filter-disabled" href="#">
                    <li>Destaques</li>
                </a>
                <a class="item-category item-filter filter-disabled" href="#">
                    <li>Recentes</li>
                </a>
                <a class="item-category item-filter filter-active" href="#">
                    <li>Recomendações</li>
                </a>
            </ul>
        </div>
        {{#if actions}}
            {{#if actions.recommendedActions}}
            <nav class="nav-articles">
                <h1 class="title padding-top2 margin-btm1">Eventos recomendados</h1>
                <div class="group-articles">
                    {{#each actions.recommendedActions}}
                        <article class="feed-article">
                            <a href="event/{{idAction}}">
                                <figure class="article-image">
                                    <img src="/temp/uploads/action/{{photoAction}}" />
                                </figure>
                                <div class="article-content">
                                    <h1 class="article-title">{{nameAction}}</h1>
                                    <h3 class="article-subitle">{{descriptionAction}}
                                    </h3>
                                    <div class="article-ngo-details">
                                        <p class="article-ngo-name">Por <a href="#">{{nameNgo}}</a></p>
                                        <p class="article-ngo-date">{{createdAt.day}} de {{createdAt.month}} de
                                            {{createdAt.year}}</p>
                                    </div>
                                </div>
                            </a>
                        </article>
                    {{/each}}
                </div>
            </nav>

            {{/if}}

        {{else}}

        {{!-- ERR Msg --}}
        <div class="container flex-column align-center margin-top4">
            <img style="height: 40vh;" src="/assets/imgs/empty4.svg" />
            <h1 class="big-text text-center margin0 margin-top4">Não esperávamos por essa...</h1>
            <p class="text text-center margin0 margin-top1">Não conseguimos encontrar nenhum evento ou ONG de acordo com
                seus interesses.<br>Mas você ainda pode pesquisar por eventos e ONGs ou selecionar filtros diferentes.
            </p>
        </div>

        {{/if}}
        {{#if recommendedNgos}}
            <nav class="nav-articles">
                <h1 class="title padding-top2 margin-btm1">Ongs que talvez você goste...</h1>
                <div class="group-articles">
                    {{#each recommendedNgos}}
                        <a href="{{ngo.userName}}">
                            <article class="feed-article">
                                <figure class="article-image">
                                    <img src="/temp/uploads/profile/{{ngo.photoNgo}}" />
                                </figure>
                                <div class="article-content">
                                    <h1 class="article-title" style="color: #3f3f3f;">{{ngo.nameNgo}}</h1>
                                </div>
                            </article>
                        </a>
                    {{/each}}
                </div>
            </nav>
        {{/if}}
    </div>
</div>